<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <Button
        android:id="@+id/buttonGetBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/get_back_to_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewWyniki"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lineSpacingExtra="8sp"
                android:text="@string/textview"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:typeface="normal"
                tools:text="Tutaj znajda sie wyniki nasszej gierki jak tylko ogarne jak w tyum miejscu zastosowac JSONowe komendy GET" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>